{
  "name": "noxionite",
  "version": "1.0.0",
  "private": true,
  "description": "Your Notion pages, reborn as a stunning blog",
  "author": "Jaewan Shin <alemem64@gmail.com>",
  "repository": "alemem64/noxionite",
  "license": "MIT",
  "packageManager": "pnpm@10.11.1",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "scripts": {
    "predev": "node scripts/generate-language-files.mjs",
    "dev": "next dev -H 0.0.0.0",
    "prebuild": "node scripts/generate-language-files.mjs",
    "build": "next build",
    "postbuild": "tsx scripts/generate-social-images.mjs",
    "start": "next start -H 0.0.0.0",
    "deploy": "vercel deploy",
    "deps:upgrade": "[ -z $GITHUB_ACTIONS ] && pnpm up -L notion-client notion-types notion-utils react-notion-x || echo 'Skipping deps:update on CI'",
    "deps:link": "[ -z $GITHUB_ACTIONS ] && run-s deps:link:* || echo 'Skipping deps:update on CI'",
    "deps:unlink": "[ -z $GITHUB_ACTIONS ] && pnpm add notion-client notion-types notion-utils react-notion-x || echo 'Skipping deps:update on CI'",
    "deps:link:notion-types": "pnpm link ../react-notion-x/packages/notion-types",
    "deps:link:notion-utils": "pnpm link ../react-notion-x/packages/notion-utils",
    "deps:link:notion-client": "pnpm link ../react-notion-x/packages/notion-client",
    "deps:link:react-notion-x": "pnpm link ../react-notion-x/packages/react-notion-x",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "test": "run-p test:*",
    "test:lint": "eslint .",
    "test:prettier": "prettier '**/*.{js,jsx,ts,tsx}' --check"
  },
  "dependencies": {
    "@fisch0920/use-dark-mode": "^2.4.0",
    "@keyvhq/core": "^1.6.9",
    "@keyvhq/redis": "^1.6.10",
    "@react-icons/all-files": "^4.1.0",
    "@sparticuz/chromium": "^123.0.1",
    "@types/react-transition-group": "^4.4.12",
    "@vercel/analytics": "^1.5.0",
    "chrome-aws-lambda": "^10.1.0",
    "classnames": "^2.5.1",
    "expiry-map": "^2.0.0",
    "fathom-client": "^3.4.1",
    "framer-motion": "^12.23.9",
    "i18next": "^25.3.2",
    "ky": "^1.8.1",
    "lqip-modern": "^2.2.1",
    "next": "^15.3.3",
    "next-i18next": "^15.4.2",
    "notion-client": "^7.4.2",
    "notion-types": "^7.4.2",
    "notion-utils": "^7.4.2",
    "p-map": "^7.0.3",
    "p-memoize": "^7.1.1",
    "posthog-js": "^1.249.4",
    "prismjs": "^1.30.0",
    "react": "^19.1.0",
    "react-body-classname": "^1.3.1",
    "react-dom": "^19.1.0",
    "react-force-graph-2d": "^1.28.0",
    "react-i18next": "^15.6.1",
    "react-icons": "^5.5.0",
    "react-notion-x": "^7.4.2",
    "react-transition-group": "^4.4.5",
    "react-tweet": "^3.2.2",
    "react-use": "^17.6.0",
    "rss": "^1.2.2",
    "sigma": "^3.0.2",
    "vis-network": "^10.0.1"
  },
  "devDependencies": {
    "@fisch0920/config": "^1.1.2",
    "@next/bundle-analyzer": "^15.3.3",
    "@next/eslint-plugin-next": "^15.4.3",
    "@types/node": "^22.15.30",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.1.6",
    "@types/react-body-classname": "^1.1.10",
    "@types/react-dom": "^19.1.6",
    "@types/rss": "^0.0.32",
    "cross-env": "^7.0.2",
    "eslint": "^9.28.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.5.3",
    "puppeteer": "^24.16.0",
    "serve-handler": "^6.1.6",
    "tsx": "^4.16.2",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "cacheable-request": {
      "keyv": "npm:@keyvhq/core@~1.6.6"
    }
  },
  "prettier": "@fisch0920/config/prettier",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --ignore-unknown --write",
      "eslint --fix"
    ]
  }
}
